-#%h1 Events

-# flag = 0
  - if flag
    %h3 params
    = debug(params)
    %h3 session
    = debug(session)
    -#%h3 respose
    -#= debug(response)
    %h3 User
    Name: #{@user.name}; Role: #{@user.role}

.event-table
  %table.list-table
    %tr.list-header
      %th.list-cell Date
      %th.list-cell Title
      %th.list-cell Description
      %th.list-cell Location
      %th.list-cell Occupants
      %th.list-cell Drivers

    - @events.each do |event|
      %tr{:valign => "top", :class => cycle('list-line-odd', 'list-line-even')}
        %td.list-cell
          = event.event_date.strftime("%a\n%e-%m-%Y")
        %td.list-cell= link_to event.title, event_path(event)
        %td.list-cell= truncate(event.description,:length => 30)
        %td.list-cell
          <b>#{event.to_from}</b> #{event.location}
          %br/
          = event.event_time.strftime("%H:%M") if event.event_time
          &nbsp;
        %td.list-cell
          = render(event.occupants)
        %td.list-cell
          = render(event.drivers)

  %span.annotation
    T = Tentative
= will_paginate @events
%br/
= link_to 'New Event', new_event_path 
