.schoolrun_form
  - if flash[:alert]
    %p#notice= flash[:alert]

  = form_tag do 
    %fieldset
      %legend Please Log In
      .login
        = label_tag :name, 'Name:'
        = text_field_tag :name, params[:name]

      .login
        = label_tag :password, 'Password:'
        = password_field_tag :password, params[:password]

      .login
        = submit_tag "Login"
        = link_to "Forgotten password?", new_password_reset_path

